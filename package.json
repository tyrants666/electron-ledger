{
  "name": "Ledger",
  "main": "public/electron.js",
  "version": "1.0.0",
  "license": "MIT",
  "homepage": "./",
  "description": "your app description",
  "author": "akashyadav.iiita@gmail.com",
  "private": true,
  "dependencies": {
    "bootstrap": "^4.3.1",
    "concurrently": "^4.1.0",
    "jquery": "^3.4.0",
    "popper.js": "^1.15.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-scripts": "1.0.10",
    "wait-on": "^3.2.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "dev": "concurrently \" npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "pack": "build --dir",
    "prod": "build"
  },
  "build": {
    "appId": "myledgerapp",
    "extends": null,
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "nsis-web",
      "icon": "build/icon.png"
    }
  },
  
  "devDependencies": {
    "axios": "^0.18.0",
    "electron": "^4.1.4",
    "electron-builder": "^20.39.0"
  }
}
